homepage:            https://github.com/haskellGardener/stereoaquatics/aquatics
bug-reports:         https://github.com/haskellGardener/stereoaquatics/aquatics/issues

category:            Test
build-type:          Simple
stability:           alpha (experimental)
cabal-version:       >=1.10

extra-source-files:
  README.md
  stack.yaml

source-repository head
  type:     git
  location: https://github.com/haskellGardener/stereoaquatics/aquatics

library
  default-language: Haskell2010
  ghc-options: -Werror -O2
  default-extensions:
      NoImplicitPrelude
    , OverloadedStrings
    , RecordWildCards
    , ScopedTypeVariables
    , TypeApplications
    , NegativeLiterals
  hs-source-dirs:    src
  exposed-modules:   Resistors
                   , Stuff
  build-depends:     base >= 4.8 && < 5
                   , hashable
                   , holmes
                   , mtl
                   , text
                   , data-default-class
                   , data-default

executable aquatics-exe
  default-language:  Haskell2010
  ghc-options:       -Werror -O2 -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:    src-exe
  main-is:           Main.hs
  build-depends:     base >= 4.8 && < 5
                   , aquatics

test-suite aquatics-test
  type:              exitcode-stdio-1.0
  default-language:  Haskell2010
  ghc-options:       -Wall -Werror -O2 -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:    src-test
  main-is:           Main.hs
  build-depends:     base >= 4.8 && < 5
                   , tasty >= 0.11
                   , tasty-hunit >= 0.9
                   , tasty-smallcheck >= 0.8
                   , aquatics

test-suite aquatics-doctest
  type:              exitcode-stdio-1.0
  default-language:  Haskell2010
  ghc-options:       -Wall -Werror -O2 -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:    src-doctest
  main-is:           Main.hs
  build-depends:     base >= 4.8 && < 5
                   , doctest >=0.10
                   , Glob >= 0.7
                   , QuickCheck >= 2.5
                   , aquatics

benchmark aquatics-benchmark
  type:              exitcode-stdio-1.0
  default-language:  Haskell2010
  ghc-options:       -Wall -Werror -O2 -threaded -rtsopts -with-rtsopts=-N
  hs-source-dirs:    src-benchmark
  main-is:           Main.hs
  build-depends:     base >= 4.8 && < 5
                   , criterion >= 1.1
                   , aquatics
